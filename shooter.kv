#:kivy 1.0.9

<PlayerShip>:
	size: 10, 20
	canvas:
		Clear
		Color: 
			rgb: (0, 1, 0)
		Rectangle:
			pos:self.pos
			size:self.size

<EnemyShip>:
	size: 20, 40
	canvas:
		Clear
		Color: 
			rgb: (1, 0, 0)
		Ellipse:
			pos:self.pos
			size:self.size
		

<PlayerBullet>:
	id: bullet
	size: 3, 3
	canvas:
		Clear
		Color: 
			rgb: (1, 1, 1)
		Rectangle:
			pos:self.pos
			size:self.size

<ShooterGame>:
	player1: player_ship
	label1: label_one
	
	# canvas:
	# 	Rectangle:
	# 		pos: self.center_x-1, 0
	# 		size: 2, self.height
	
	Label:
		id: label_one
		font_size: 20  
		center_x: 100
		top: root.top - 10
		text: "Astro-Venture!"
		
	PlayerShip:
		id: player_ship
		center_x: root.width / 2
		center_y: 30

	EnemyShip:
		id: enemy_ship
		center_x: 500
		center_y: 500