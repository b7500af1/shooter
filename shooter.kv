#:kivy 1.0.9

<PlayerShip>:
	size: 10, 20
	canvas:
		Clear
		Color: 
			rgb: (0, 1, 0)
		Rectangle:
			pos:self.pos
			size:self.size

<EnemyShip>:
	size: 40, 30
	canvas:
		Clear
		Color: 
			rgb: (1, 0, 0)
		Ellipse:
			pos:self.pos
			size:self.size
		
<Debris>:
	size: 10, 10
	canvas:
		Clear
		# Color: 
		# 	rgb: (0.7, 0.7, 0)
		Rectangle:
			pos:self.pos
			size:self.size

<PlayerBullet>:
	id: pbullet
	size: 2, 15
	canvas:
		Clear
		Color: 
			rgb: (0, 1, 0)
		Rectangle:
			pos:self.pos
			size:self.size

<EnemyBullet>:
	id: ebullet
	size: 2, 8
	canvas:
		Clear
		Color: 
			rgb: (1, 0, 0)
		Rectangle:
			pos:self.pos
			size:self.size

<ShooterGame>:
	player1: player_ship
	label1: label_one
	
	Label:
		id: label_one
		font_size: 20  
		center_x: 100
		top: root.top - 10
		text: "Astro-Venture!"
		
	PlayerShip:
		id: player_ship
		center_x: root.width / 2
		center_y: 30